# Jenkins Connection Settings
JENKINS_URL=http://localhost:8080
JENKINS_USER=your-username
JENKINS_API_TOKEN=your-api-token

# MCP Server Settings
MCP_PORT=8010
MCP_HOST=0.0.0.0

# Retry Configuration (Optional)
JENKINS_MAX_RETRIES=3
JENKINS_RETRY_BASE_DELAY=1.0
JENKINS_RETRY_MAX_DELAY=60.0
JENKINS_RETRY_BACKOFF_MULTIPLIER=2.0

# Request Timeouts (Optional)
JENKINS_DEFAULT_TIMEOUT=10
JENKINS_HEALTH_TIMEOUT=5

# Cache Configuration (Optional)
JENKINS_CRUMB_CACHE_MINUTES=30
JENKINS_CACHE_STATIC_TTL=3600
JENKINS_CACHE_SEMI_STATIC_TTL=300
JENKINS_CACHE_DYNAMIC_TTL=30
JENKINS_CACHE_SHORT_TTL=10

# Cache Size Limits (Optional)
JENKINS_CACHE_STATIC_SIZE=1000
JENKINS_CACHE_SEMI_STATIC_SIZE=500
JENKINS_CACHE_DYNAMIC_SIZE=200
JENKINS_CACHE_PERMANENT_SIZE=2000
JENKINS_CACHE_SHORT_SIZE=100

# Content Limits (Optional)
JENKINS_MAX_LOG_SIZE=1000
JENKINS_MAX_CONTENT_SIZE=10000
JENKINS_MAX_ARTIFACT_SIZE_MB=50

# Search and Pagination Defaults (Optional)
JENKINS_DEFAULT_MAX_DEPTH=10
JENKINS_DEFAULT_MAX_BUILDS=10
